<h1>Welcome to The shop</h1>
<p>Here, you'll find the car you're looking for.</p>

    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= image_tag product.image.url(:thumb), class: "img-responsive" %>
            <p> <a href="">
              <span class="glyphicon glyphicion-plus"></span> quick info
            </a> </p>
            <p> <strong> <%= number_to_currency product.price %> </strong>
              <h4> <%= product.name %> </h4>
              <p>Made by: <%= product.brand.try(:name) %> </p>
          </p>
          </div>
        </div>
     </div>
    <% end %>
  </div>
